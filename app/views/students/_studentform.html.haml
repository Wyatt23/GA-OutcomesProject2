.col-md-6.col-md-offset-3
  #student-form
    = simple_form_for @student, html: {multipart: true } do |f|
      -if @student.errors.any?
        #errors
          %h2
            =pluralize(@student.errors.count, "error")
            prevented this student from saving
          %ul
            -@student.errors.full_messages.each do |msg|
              %li=msg
      .form-group
        = f.input :first_name, input_html: { class: "form-control"}
        = f.input :last_name, input_html: { class: "form-control"}
        = f.input :ga_focus, input_html: { class: "form-control"}
        = f.input :cohort_number, input_html: { class: "form-control"}
        = f.button :submit, value: "Submit Student", class: "btn btn-primary"
