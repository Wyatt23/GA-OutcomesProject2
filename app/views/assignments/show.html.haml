#assignment-show
  .container.col-md-6.col-md-offset-3.text-center
    %h2="#{@assignment.title} for #{@assignment.ga_focus}"
  .col-md-6.col-md-offset-3
    %h3 Instructions:
    %p= @assignment.instructions
    %h3 Due on:
    %p= @assignment.due_date

.btn.btn-default
  =link_to "Edit Assignment",edit_assignment_path(@assignment)
.btn.btn-default
  =link_to "Delete Assignment",edit_assignment_path(@assignment)
